                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_navigate_next_black_24dp"
                android:tint="@color/grey"
                tools:ignore="contentDescription" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_layout_item4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@animator/press">

            <ImageView
                android:id="@+id/user_image_image4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"

                android:src="@drawable/ic_star_black_24dp"
                tools:ignore="contentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/user_image_image4"
                android:gravity="center"
                android:text="@string/function"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_navigate_next_black_24dp"
                android:tint="@color/grey"
                tools:ignore="contentDescription" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_layout_item5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@animator/press">

            <ImageView
                android:id="@+id/user_image_image5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"

                android:src="@drawable/ic_star_black_24dp"
                tools:ignore="contentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/user_image_image5"
                android:gravity="center"
                android:text="@string/function"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_navigate_next_black_24dp"
                android:tint="@color/grey"
                tools:ignore="contentDescription" />


        </RelativeLayout>

    </LinearLayout>

</ScrollView>